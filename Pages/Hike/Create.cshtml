@model Lab3.Pages_Hike.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Hike</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Hike.Name" class="control-label"></label>
                <input asp-for="Hike.Name" class="form-control" />
                <span asp-validation-for="Hike.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hike.Route" class="control-label"></label>
                <select asp-for="Hike.RouteId" class="form-control"
                        asp-items="@Model.RouteNameSL">
                    <option value="">-- Select Route --</option>
                </select>
                <span asp-validation-for="Hike.RouteId" class="text-danger" />
                @* <label asp-for="Hike.Route.RouteId" class="control-label"></label>
                <input asp-for="Hike.Route.RouteId" class="form-control" />
                <span asp-validation-for="Hike.Route.RouteId" class="text-danger"></span> *@
            </div>
            <div class="form-group">  
                <label asp-for="Hike.ScheduledTime" class="control-label"></label>    
                <input class="form-control" asp-for="Hike.ScheduledTime"  asp-format="{0:yyyy-MM-ddTHH:mm}" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
